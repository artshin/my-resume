{{!-- Resume Experience Partial --}}
{{#if experience}}
<section class="section experience">
  <h2 class="section__title">Professional Experience</h2>

  {{#each experience}}
  <article class="experience__item">
    <div class="experience__header">
      <div>
        <span class="experience__title">{{this.title}}</span>
        {{#if this.company}}
        <span class="experience__company"> | {{this.company}}</span>
        {{/if}}
      </div>
      <div class="experience__meta">
        {{#if this.location}}
        <span class="experience__location">{{this.location}}</span>
        {{/if}}
        <span class="experience__dates">{{this.dates}}</span>
      </div>
    </div>

    {{#if this.companyDescription}}
    <p class="experience__company-description"><em>{{this.companyDescription}}</em></p>
    {{/if}}

    {{#if this.technologies}}
    <p class="experience__technologies"><strong>Technologies:</strong> {{join this.technologies ", "}}</p>
    {{/if}}

    {{#if this.bullets}}
    <ul class="experience__bullets">
      {{#each this.bullets}}
      <li class="experience__bullet">{{this}}</li>
      {{/each}}
    </ul>
    {{/if}}
  </article>
  {{/each}}
</section>
{{/if}}
